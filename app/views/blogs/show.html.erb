
<div class="flex-row d-flex justify-content-center mb-5">
    <div class="col-md-8">
    <div class="card mt-5">
            <div class="card-body">
<h1><%= @blog.title %></h1>

<h3>Category: <%= @blog.category.category %> </h3>

<div class="text-center">
<% if @blog.image.attached? %>
    <%= image_tag(@blog.image, class: "img-fluid", style:"max-height: 300px;") %>
<% end %>
</div>

<p><%= @blog.content %></p>

<div style="float: right;">
<%= link_to "Edit", edit_blog_path(@blog.id), class: 'btn btn-primary' %>
<%= link_to "Delete", blog_path(@blog), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
<%= link_to "Back", blogs_path, class: 'btn btn-secondary' %>
</div

</div>
</div>

</div>
</div>

<style>
    h1{
        text-align: center
    }
    h3{
        text-align: center
    }
    p{
        text-align: justify
    }
</style>

<div class="flex-row d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5">
            <div class="card-body">
                <%= form_for @blog do |f| %>

                    <div class="form-group">
                        <%= f.label :title %>
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>
                
                    <div class="form-group mt-2">
                        <%= f.label :content %>
                        <%= f.text_area :content, class: 'form-control', style:"height: 150px;" %>
                    </div>

                    <div class="form-group mt-2">
                        <%= f.label :image %>
                        <%= f.file_field :image, class: 'form-control' %>
                    </div>
            
                    <div class="form-group mt-3">
                        <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %>
                    </div>

                    <%= f.submit "Create Blog", class: 'btn btn-outline-primary mt-3' %>
                    <%= link_to "Back", blogs_path, class: 'btn btn-outline-secondary mt-3' %>
                
                <% end %>
            </div>
        </div>
    </div>
</div>

<style>
    select{
        width: 300px;
        height: 30px;
    }
</style>